{
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/deploy",
				"run": {
					"serviceId": "taleem",
					"region": "asia-east1"
				}
			},
			{
				"source": "/home",
				"destination": "/home.html"
			},
			{
				"source": "/register",
				"destination": "/register.html"
			},
			{
				"source": "/program",
				"destination": "/program.html"
			},
			{
				"source": "/trip",
				"destination": "/trip.html"
			},
			{
				"source": "/update-menu",
				"destination": "/update-menu.html"
			},
			{
				"source": "/visits",
				"destination": "/visits.html"
			},
			{
				"source": "/send",
				"destination": "/send.html"
			}
		]
	}
}